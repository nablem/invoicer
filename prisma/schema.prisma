// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id             String   @id @default(uuid())
  name           String
  email          String?  @unique
  address        String?
  city           String?
  zipCode        String?
  country        String?
  phone          String?
  vatNumber      String?
  companyId      String?
  quotes         Quote[]

  invoices       Invoice[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Quote {
  id        String      @id @default(uuid())
  number    String      @unique
  clientId  String
  client    Client      @relation(fields: [clientId], references: [id])
  date      DateTime    @default(now())
  dueDate   DateTime?
  status    String      @default("DRAFT") // DRAFT, SENT, ACCEPTED, REJECTED
  items     QuoteItem[]
  total     Float       @default(0)
  currency  String      @default("EUR")
  notes     String?
  invoices  Invoice[]   @relation("QuoteToInvoice")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model QuoteItem {
  id          String @id @default(uuid())
  quoteId     String
  quote       Quote  @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  title       String?
  description String
  quantity    Float
  price       Float
  total       Float
}

model Invoice {
  id               String     @id @default(uuid())
  number           String     @unique
  clientId         String
  client           Client     @relation(fields: [clientId], references: [id])
  quoteId          String?
  quote            Quote?     @relation("QuoteToInvoice", fields: [quoteId], references: [id])
  date             DateTime   @default(now())
  dueDate          DateTime?
  status           String     @default("DRAFT") // DRAFT, SENT, PAID, OVERDUE, CANCELLED
  items            InvoiceItem[]
  total            Float      @default(0)
  currency         String     @default("EUR")
  notes            String?
  
  // Recurring logic
  isRecurring      Boolean    @default(false)
  recurringInterval String?   // e.g., "MONTHLY", "YEARLY"
  nextRecurringDate DateTime?

  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}

model InvoiceItem {
  id          String @id @default(uuid())
  invoiceId   String
  invoice     Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  title       String?
  description String
  quantity    Float
  price       Float
  total       Float
}

model Organization {
  id          String   @id @default(uuid())
  name        String?
  companyId   String?
  vatNumber   String?
  address     String?
  city        String?
  zipCode     String?
  country     String?
  email       String?
  phone       String?
  website     String?
  logoUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
